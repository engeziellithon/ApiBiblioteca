    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <Sentry name="Sentry"
                dsn="https://644a7f6c7807400e9634f4c83969bddc@o319650.ingest.sentry.io/6204162"
                minimumBreadcrumbLevel="INFO"
                minimumEventLevel="INFO" />

    </Appenders>
    <bean class="io.sentry.spring.SentryServletContextInitializer"/>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Sentry"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>